-- ball

function make_ball(x,y)
	local bl = make_entity(x,y,3)

	bl.w = 8
	bl.h = 8
	bl.speed = 4
    
 bl.hsp = rnd(bl.speed * 2) - bl.speed
 bl.vsp = rnd(bl.speed * 2) - bl.speed

 bl.spri = 1
 bl.bounce = 1
 bl.collides = false
    
	return bl
end

function update_ball(bl)
 
	collision(bl)
	bl.x += bl.hsp
 bl.y += bl.vsp
    
end

function draw_ball(bl)
	spr(1,bl.x,bl.y)
	pset(bl.x - 1, bl.y -1, 1)
	pset(bl.x - 1, bl.y, 1)
	pset(bl.x + 1, bl.y -1, 1)
	pset(bl.x + 1, bl.y, 1)
end


